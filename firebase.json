{
  "hosting": [
    {
      "target": "production",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/survey/introduction/:step",
          "destination": "/index.html"
        },
        {
          "source": "/survey/company/:step",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "staging",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "function": "nextApp"
        }
      ]
    }
  ],
  "functions": {
    "source": "functions"
  }
}
